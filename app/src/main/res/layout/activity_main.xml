<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.pingu.dhbw_project.MainActivity"
    android:background= "#3A546F">

    <TextView
        android:id="@+id/koerpergroesse"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Körpergröße"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="40dp"
        />

    <View
        android:layout_width="600dp"
        android:layout_height="1dp"
        android:layout_marginTop="160dp"
        android:background="#3A617E" />

    <View
        android:id="@+id/borderTwo"
        android:layout_width="600dp"
        android:layout_height="1dp"
        android:layout_marginTop="350dp"
        android:background="#3A617E" />


    <EditText
        android:id="@+id/editKoerpergroesse"
        android:maxLength="3"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="170dp"
        android:layout_width="60dp"
        android:layout_alignLeft="@id/koerpergroesse"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:hint="cm"
        android:textColorHint="#3A546F"
        android:background="#3A617E"
        />


    <Button
        android:id="@+id/buttonBerechnen"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berechnen"
        android:background="#3A617E"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:id="@+id/buttonMan"
        android:layout_height="120dp"
        android:layout_width="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/man_selector" />


    <ImageButton
        android:id="@+id/buttonWomen"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/woman_selector" />

    <ImageButton
        android:id="@+id/buttonHelp"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:background="@drawable/help__2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/refresh"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/refreshButton" />

    <!-- end of code -->
</RelativeLayout>


