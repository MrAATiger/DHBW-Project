<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3A546F"
    tools:context="com.example.pingu.dhbw_project.ResultActivity">




    <ImageView
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/result_background"
        android:id="@+id/imageView"
        android:layout_width="wrap_content" />

    <View
        android:layout_width="600dp"
        android:layout_height="1dp"
        android:layout_marginTop="95dp"
        android:background="#3A617E" />

    <View
        android:layout_width="600dp"
        android:layout_height="1dp"
        android:layout_marginTop="380dp"
        android:background="#3A617E" />

    <TextView
        android:id="@+id/resultIdealWeight"
        android:text="Test"
        android:gravity="center"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:textColor="#76662C"
        android:layout_marginTop="155dp"
        android:layout_marginLeft="155dp"/>

    <TextView
        android:text="result"
        android:gravity="center"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="127dp"
        android:textColor="#76662C"
        android:id="@+id/resultWeight"
        />

    <TextView
        android:text="Normalgewicht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:id="@+id/textNormalWeight"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="100dp"
         />

    <TextView
        android:text="Idealgewicht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:id="@+id/textView4"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="155dp"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9dp"
        android:text="Körpergröße"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="158dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9dp"
        android:id="@+id/koerpergroesseEingabe"
        android:text="blubb"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="170dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zurück"
        android:id="@+id/zurueck"
        android:background="#3A617E"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
